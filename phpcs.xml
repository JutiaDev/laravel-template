<?xml version="1.0"?>
<ruleset name="Custom Standard">
    <description>NEOXIA CS standard</description>

    <file>./app</file>
    <file>./tests</file>

    <exclude-pattern>*\.(css|js|vue|ts)$</exclude-pattern>

    <arg name="report" value="full"/>
    <arg name="report" value="summary"/>
    <arg value="sp"/>

    <rule ref="PSR2">
        <exclude name="Generic.Arrays.ArrayIndent.CloseBraceNotNewLine"/>
        <exclude name="Generic.Formatting.DisallowMultipleStatements.SameLine"/>
        <exclude name="PSR2.Methods.FunctionCallSignature.MultipleArguments"/>
        <exclude name="PSR2.ControlStructures.ElseIfDeclaration.NotAllowed"/>
    </rule>

    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <rule ref="Squiz.WhiteSpace.OperatorSpacing">
        <properties>
            <property name="ignoreNewlines" value="true" />
        </properties>
    </rule>
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <severity>100</severity>
        <properties>
            <property name="ignoreBlankLines" value="false"/>
        </properties>
    </rule>

    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace.StartFile">
        <severity>100</severity>
    </rule>

    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace.EndFile">
        <severity>100</severity>
    </rule>

    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace.EmptyLines">
        <severity>100</severity>
    </rule>

    <rule ref="Squiz.WhiteSpace.ControlStructureSpacing.SpaceBeforeCloseBrace">
        <severity>100</severity>
    </rule>

    <rule ref="Squiz.WhiteSpace.ControlStructureSpacing.NoLineAfterClose">
        <severity>100</severity>
    </rule>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/> <!-- warning -->
            <property name="absoluteLineLimit" value="200"/> <!-- error -->
        </properties>
    </rule>

    <rule ref="Generic.Arrays.ArrayIndent">
        <properties>
            <property name="indent" value="4" />
        </properties>
    </rule>

    <rule ref="Generic.PHP.ForbiddenFunctions">
        <properties>
            <property name="forbiddenFunctions" type="array">
                <element key="sizeof" value="count"/>
                <element key="delete" value="unset"/>
                <element key="create_function" value="null"/>
                <element key="print" value="null"/>
                <element key="echo" value="null"/>
                <element key="var_dump" value="null"/>
                <element key="dump" value="null"/>
                <element key="dd" value="null"/>
                <element key="sprintf" value='""'/>
            </property>
        </properties>
    </rule>

    <rule ref="PSR12.Functions.ReturnTypeDeclaration">
        <properties>
            <property name="space_before" value="none"></property>
        </properties>
    </rule>
</ruleset>
